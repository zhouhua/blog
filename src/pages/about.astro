---
import weixin from '@assets/image/weixin.jpeg';
import Bio from '@components/Bio.astro';
import Container from '@components/Container.astro';
import { HOME } from '@consts';
import PageLayout from '@layouts/PageLayout.astro';
import { cn } from '@lib/utils';
import { Image } from 'astro:assets';
import { RoughNotation } from 'react-rough-notation';
---

<style lang="postcss">
.card {
  box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.2);
}

:global(.dark) .card {
  box-shadow: inset 0 -1px 0 0 #ffffff1d;
}

.cardShadow {
  box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.2);
}
</style>

<PageLayout description={HOME.DESCRIPTION} title={HOME.TITLE}>
  <Container>
    <div class="relative mx-auto max-w-[640px]">
      <div
        class={cn(
          'cardShadow',
          'absolute -top-5 left-1/2 z-[9] ml-[-18px] h-10 w-10 -translate-x-1/2 rounded-full sm:hidden',
        )}
      />
      <div
        class={cn(
          'relative z-10 my-36 rounded-3xl',
          'colorModeTransition bg-palette-card',
          'card',
        )}
      >
        <div class="absolute left-1/2 top-0 -translate-x-1/2 -translate-y-1/2 sm:top-24 sm:-translate-x-32">
          <Bio hideText />
        </div>
        <article
          class={cn('flex items-center justify-between px-8 py-6 sm:flex-col sm:px-6')}
        >
          <div class="flex h-80 flex-col justify-between leading-10 sm:justify-around">
            <div class="colorModeTransition text-palette-primary sm:ml-16">
              <h2 class="mb-4 mt-6 text-4xl">周骅</h2>
              <a href="mailto:zhou--hua@163.com">
                <span class="mr-3 iconify fa6-solid--envelope" />
                <RoughNotation
                  animationDelay={800}
                  client:only="react"
                  color="rgb(var(--color-accent))"
                  show
                  strokeWidth={2}
                  type="underline"
                >
                  zhou--hua@163.com
                </RoughNotation>
              </a>
            </div>
            <div class="font-serif text-sm leading-6 text-palette-secondary sm:text-center">
              想成为⼀个有趣的⼈。
              <br />
              爱足球，爱桌游，
              <br />
              爱美食，爱⽣活。
              <br />
              爱钻研技术，更爱⽤技术改变产品；
              <br />
              爱解决问题，更爱提出问题。
            </div>
          </div>
          <Image
            alt="微信二维码"
            class="rounded-lg sm:my-8 h-80 w-[241px]"
            height={640}
            src={weixin}
          />
        </article>
      </div>
    </div>
  </Container>
</PageLayout>
